<section class="gradient-custom-2">
  <div class="container py-5">
    <div class="row d-flex justify-content-center align-items-center">
      <div class="col col-lg-9 col-xl-7">
        <div class="card">
          <div class="rounded-top text-white d-flex flex-row" style="background-color: #999999; height:200px;">
            <div class="ms-4 mt-5 d-flex flex-column" style="width: 150px;">
              <% if current_user.avatar.attached? %>
                <%= image_tag(current_user.avatar, style: "vertical-align: middle;width: 100px; height: 100px; border-radius: 50%; ") %>
              <% end %>
            </div>
            <div class="ms-3" style="margin-top: 130px;">
              <h5><%= @user.username %></h5>
            </div>
          </div>
          <div class="p-4 text-black" style="background-color: #DADADA;">
            <% if @user.id == current_user.id %>
              <button type="button" class="btn btn-outline-dark" data-mdb-ripple-color="dark"
                      style="z-index: 1;margin-right: 1%; text-align: left">
                <%= link_to "Edit profile", edit_user_registration_path, class: "nav-link" %>
              </button>
            <% else %>
              <% if current_user.following?(@user) %>
                <%= button_to "Unfollow", unfollow_path(@user) %>
              <% else %>
                <%= button_to "Follow", follow_path(@user) %>
              <% end %>
            <% end %>
            <div class="d-flex justify-content-end text-center py-1">
              <div>
                <p class="mb-1 h5"><%= @user.posts.count %></p>
                <p class="small text-muted mb-0">Posts</p>
              </div>
              <div class="px-3">
                <p class="mb-1 h5"><%= @user.followers.count %></p>
                <p class="small text-muted mb-0">Followers</p>
              </div>
              <div>
                <p class="mb-1 h5"><%= @user.following.count %></p>
                <p class="small text-muted mb-0">Following</p>
              </div>
            </div>
          </div>
          <div class="card-body p-4 text-black">
            <div class="mb-5">
              <p class="lead fw-normal mb-1">About</p>
              <div class="p-4" style="background-color: #DADADA;">
                <p><%= @user.bio %></p>
              </div>
            </div>
            <div class="d-flex justify-content-between align-items-center mb-4">
              <p class="lead fw-normal mb-0">Recent photos</p>
            </div>
            <%= stylesheet_link_tag("post") %>
            <p style="color: green"><%= notice %></p>
            <div id="posts" class="sticker">
              <% @posts.each do |post| %>
                <% if post.user.id == @user.id %>
                  <%= render post %>
                <% end %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>